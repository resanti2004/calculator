<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="30dp"
    >

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator App"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_bgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500x20"
        android:fontFamily="@font/poppinsregular"
        android:textSize="27dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_bwh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60.000"
        android:fontFamily="@font/poppinsbold"
        android:textSize="38dp"
        app:layout_constraintTop_toBottomOf="@+id/text_bgn"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/garisLurus"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/text_bwh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75">
    </androidx.constraintlayout.widget.Guideline>


    <android.widget.Button
        android:id="@+id/n7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/garisLurus"/>

    <android.widget.Button
        android:id="@+id/n4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/n7"/>

    <android.widget.Button
        android:id="@+id/n1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/n4"/>

    <android.widget.Button
        android:id="@+id/n8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintStart_toStartOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/garisLurus"/>

    <android.widget.Button
        android:id="@+id/n5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintStart_toStartOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/n8"/>

    <android.widget.Button
        android:id="@+id/n2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintStart_toStartOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/n5"/>

    <android.widget.Button
        android:id="@+id/n9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintStart_toStartOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/garisLurus"/>

    <android.widget.Button
        android:id="@+id/n6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintStart_toStartOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/n9"/>

    <android.widget.Button
        android:id="@+id/n3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintStart_toStartOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/n6"/>

    <android.widget.Button
        android:id="@+id/nplus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/garisLurus"/>

    <android.widget.Button
        android:id="@+id/nminus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/nplus"/>

    <android.widget.Button
        android:id="@+id/nper"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/nminus"/>

    <android.widget.Button
        android:id="@+id/nsama"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/nper"/>

    <android.widget.Button
        android:id="@+id/nx"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="x"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintStart_toStartOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/n3"/>

    <android.widget.Button
        android:id="@+id/n0"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/n2"/>



</androidx.constraintlayout.widget.ConstraintLayout>